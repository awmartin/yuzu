#!/usr/bin/env ruby

require 'rubygems'

$LOAD_PATH.unshift(File.dirname(__FILE__) + '/../lib')

require 'yuzu'
require 'yuzu/command'

args = ARGV.dup
ARGV.clear

command_str = args[0].strip rescue 'help'
command_str = command_str.start_with?("-") ? nil : command_str

Yuzu::Command.run(command_str, args)

