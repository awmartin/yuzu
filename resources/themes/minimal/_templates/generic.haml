%html
  = layout.head

  %body.generic
    .wrapper
      %article.contents
        %header
          %h1= post.post_title
          .breadcrumb= post.breadcrumb

        = post.contents

      .sidebar
        = layout.menu

        %h4 Categories
        %ul
          - post.all_categories.each do |cat|
            %li= cat.link
        
        = post.sidebar

      %footer
        = layout.footer

